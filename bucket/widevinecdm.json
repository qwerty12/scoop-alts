    "installer": {
        "script": [
            "$dest = \"$dir\\WidevineCdm\"",
            "$rootextdir = 'Chrome-bin'",
            "Expand-7zipArchive \"$dir\\chrome.7z\" $dest -ExtractDir \"$rootextdir\\$version\\WidevineCdm\" -Removal",
