{
    "version": "0.0.9",
    "description": "RapidVideOCR creates SRT files from hardcoded subtitles in videos",
    "homepage": "https://github.com/SWHL/RapidVideOCRDesktop",
    "license": "Apache-2.0",
    "depends": "scoop-alts/videosubfinder",
    "architecture": {
        "64bit": {
